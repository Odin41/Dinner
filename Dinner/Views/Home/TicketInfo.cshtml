@model Dinner.Models.Ticket

@{ 
    <div class="panel panel-primary" style="width: 20rem;">
        <div class="panel-heading">
            <h5 class="panel-title">
                @Resources.Resource.TicketInformationLabel
            </h5>
        </div>
        <div class="panel-body">
            @if(Model != null)
            {
                <h6 class="text-muted">@Resources.Resource.QueueNumber</h6>
                <h4 class="text-center">@ViewData["TicketNumber"]</h4>
                <h6 class="text-muted">@Resources.Resource.TakeQueueToRoom</h6>
                <h5>@ViewData["RoomName"]</h5>
                <h6 class="text-muted">@Resources.Resource.TakeQueueToMicrowave</h6>
                <h5>@ViewData["DeviceName"]</h5>
            }
            else
            {
                <h4 class="text-center">@Resources.Resource.CheckQueueStatusNotFind</h4>
            }
        </div>
    </div>
}

